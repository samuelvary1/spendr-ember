<form class="form-horizontal" {{action "submit" on="submit"}}>
  <div class="form-group">
    <label for="expense-amount">Amount</label>
    {{input id='expense-amount' placeholder='$' value=expense.amount type="expense-amount"}}
  </div>
  <div class="form-group">
    <label for="expense-note">Note</label>
    {{input id='expense-note' placeholder='Notes' value=expense.note class="form-control"}}
  </div>


  <button type="submit" class="btn btn-default btn-sm">Submit</button>
</form><br>
